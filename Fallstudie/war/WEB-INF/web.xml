<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>de.dhbw.wwi11sca.skdns.server.LoginServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/fallstudie/login</url-pattern>
  </servlet-mapping>
    
  <servlet>
    <servlet-name>homeServlet</servlet-name>
    <servlet-class>de.dhbw.wwi11sca.skdns.server.HomeServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>homeServlet</servlet-name>
    <url-pattern>/fallstudie/home</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Fallstudie.html</welcome-file>
  </welcome-file-list>

</web-app>
